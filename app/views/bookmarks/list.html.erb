
<% if @bookmarks.blank? %>
	<p><h2>Actualmente no hay bookmarks en el sistema</h2></p>
<% else %>
	<p><h2>Estos son los bookmarks actuales del sistema</h2></p>
	<table id="bookmarks">

	<tr>
		<td class='tittle'><%= 'URL' %></td>
		<td class='tittle'><%= 'Popularidad' %></td>
		<td class='tittle'><%=  'Seguridad' %></td>
		<td class='tittle'><%=  'CategorÃ­a' %></td>
	</tr>

	<%= paginate bookmarks %>

	<% @bookmarks.each do |c| %>
		<tr>
			<td><%= link_to c.url, {action: 'show', id: c.id} -%></td>
			<td><%= c.popularity %></td>
			<td><%= c.security %></td>
		</tr>
	<% end %>
	</table>
<% end %>
<p>
	<%= button_tag "Agregar Bookmark", {type: 'submit',onclick: "window.location='/bookmarks/new'" }%>
</p>

<%= render "layouts/back" %>
